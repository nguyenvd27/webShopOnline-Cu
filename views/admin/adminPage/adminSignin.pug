extends ../layout/header.pug
block content
  .container
    .row
      //include ../layout/sidebar.pug
      .span9
        ul.breadcrumb
          li
            a(href='index.html') Admin
            span.divider /
          li.active Login
        h3  Login
        hr.soft
        .row
          .span4
            .well
              h5 ADMIN ?
              if errors
                each error in errors
                  .alert.alert-danger= error
              form(action="/admin/signin/", method="POST" )
                .control-group
                  label.control-label(for="email") Email
                  .controls
                    input#email.span3(type="email" name="email" value= values ? values.email : '')
                .control-group
                  label.control-label(for="password") Password
                  .controls
                    input#password.span3(type="password" name="password" value= values ? values.password : '')
                .control-group
                  .controls
                    button.btn(type='submit') Sign in
                    a(href='forgetpass.html') Forget password?
          //- Neu them vao can thay doi name va password
          .span4
            .well
              h5 CREATE YOUR ACCOUNT
              br
              form(action='/admin/signin/create', method="POST")
                .control-group
                  label.control-label(for='inputEmail0') Email
                  .controls
                    input#inputEmail0.span3(type='text', name='emailCreate', placeholder='Email')
                .control-group
                  label.control-label(for="password") Password
                  .controls
                    input#password.span3(type="password", name='passwordCreate', placeholder='Password')
                .controls
                  button.btn.block(type='submit') Create Admin Account
