        ul#topMenu.nav.pull-right
          li
            a(href='/admin/products') PRODUCTS
          li
            a(href='/admin/users') USERS
          li
            a(href='/admin/orders') ORDERS[ #{numberOfOrders} ]
          li
            a(href='/admin/logout', role='button', data-toggle='modal', style='padding-right:0')
              span.btn.btn-large.btn-success Logout
