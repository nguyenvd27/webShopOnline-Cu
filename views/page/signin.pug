extends ../layout/header.pug
block content
  .container
    .row
      include ../layout/sidebar.pug
      .span9
        ul.breadcrumb
          li
            a(href='index.html') Home
            span.divider /
          li.active Login
        h3  Login
        hr.soft
        .row
          .span4
            .well
              h5 ALREADY REGISTERED ?
              if errors
                each error in errors
                  .alert.alert-danger= error
              form(action="/signin", method="POST" )
                .control-group
                  label.control-label(for="email") Email
                  .controls
                    input#email.span3(type="email" name="email" value= values ? values.email : '')
                .control-group
                  label.control-label(for="password") Password
                  .controls
                    input#password.span3(type="password" name="password" value= values ? values.password : '')
                .control-group
                  .controls
                    button.btn.btn-success(type='submit') Sign in
                    //a(href='forgetpass.html') Forget password?
          .span1  &nbsp;
          .span4
            .well
              h5 CREATE YOUR ACCOUNT
              a.btn.btn-success(href='/signin/create') Create
  // Footer ==========================================================
  include ../layout/footer.pug
